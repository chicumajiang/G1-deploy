<mujoco model="g1 scene with rope">
  <include file="g1_29dof_rev_1_0.xml"/>

  <statistic center="1.0 0.7 1.0" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0.9 0.9 0.9"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-140" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="flat" rgb1="0 0 0" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="1 0 3.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" friction="1.2 0.02 0.001"/>
    
    <!-- 绳索支撑点 (可移动的锚点) -->
    <body name="rope_anchor" pos="0 0 2.0">
      <joint name="rope_height" type="slide" axis="0 0 1" range="0.5 3.0" damping="10"/>
      <geom name="anchor_point" type="sphere" size="0.02" rgba="0.8 0.2 0.2 1" mass="0.01"/>
      
      <!-- 绳索本体 (使用胶囊体模拟) -->
      <body name="rope_body" pos="0 0 -0.5">
        <geom name="rope_visual" type="capsule" size="0.005" fromto="0 0 0 0 0 -1.0" rgba="0.3 0.3 0.3 1" mass="0.1"/>
        
        <!-- 绳索连接点 (连接到机器人) -->
        <site name="rope_attach_point" pos="0 0 -1.0" size="0.02"/>
      </body>
    </body>
  </worldbody>

  <!-- 绳索约束 (连接机器人躯干) -->
  <equality>
    <connect name="rope_connection" body1="rope_body" body2="torso_link" anchor="0 0 -1.0" active="true"/>
  </equality>
</mujoco>
